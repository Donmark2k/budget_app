<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<nav class="">
  <div class="navbar">
 <p>
  <span>
    <%= link_to 'â†', splash_path, class: 'arrow-link' %>
  </span>
</p>
    <h2 class="login">REGISTRATION</h2>
    <div class="actions">
    <%= f.submit "Sign up", class: 'login-btn' %>
  </div>
  </div>
</nav>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full Name", class: "login-field" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "login-field" %>
  </div>

  <div class="field">
  <!--
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    -->
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter Password @ 6 characters minimum", class: "login-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "login-field" %>
  </div>

  
<% end %>

<% render "devise/shared/links" %>
